<script>
// Testimonial Slider
let currentSlide = 0;
const slider = typeof window !== 'undefined' ? document.getElementById('testimonial-slider') : null;
const slides = slider ? slider.children : [];
const totalSlides = slides.length;

function updateSlider() {
  if (!slider) return;
  slider.style.transform = `translateX(-${currentSlide * 100}%)`;
  document.querySelectorAll('.w-3.h-3').forEach((dot, index) => {
    dot.classList.toggle('bg-primary', index === currentSlide);
    dot.classList.toggle('bg-gray-600', index !== currentSlide);
  });
}

function goToSlide(index) {
  currentSlide = index;
  updateSlider();
}

function nextSlide() {
  currentSlide = (currentSlide + 1) % totalSlides;
  updateSlider();
}

if (typeof window !== 'undefined') {
  setInterval(nextSlide, 5000);
  document.querySelector('.w-3.h-3')?.classList.add('bg-primary');
}
</script> 